class Chunk{
  public:
    Chunk();
    void initChunk(Shader &s);
    void drawChunk();
    void textureBlocks();
  private:
    unsigned int VBO, VAO, EBO;
    std::vector<Block> blocks;
    Block block;
    unsigned int texture;
    int chunkSize = 16;
    int chunkDepth = 64;
};
